<!DOCTYPE HTML>
<html>
  <head>
    {{template "html_head"}}
    <title>View Automobiles</title>
    <style>
      body {
        color: #e0b360;
        background-color: #101724;
        font-size: 1.5rem;
        font-family: sans-serif;

      }

      .card {
	  color: #666600;
      }

      nav {
        font-size: 1rem;
        background-color: #283857;
        border-radius: 25px;
      }

      h1 {
        font-size: 2rem;
      }

      #big-link:hover {
        background-color: #101724;
        border-radius: 25px; 
      }

      a, a:hover{
        color: #e0b360;
        text-decoration: none;
      }

      li:hover {
        background-color: #101724;
        border-radius: 25px;
      }

      #title {
        font-size: 4rem;
        background-color: #283857;
        border-radius: 25px;
      }

    </style>
      
  </head>
  <script>
    const deleteData = async (vehicleId, customerId ) =>{
      const response = await fetch(`/delete-auto?vehicleId=${vehicleId}&customerId=${customerId}`, {
        method: 'DELETE', // *GET, POST, PUT, DELETE, etc.
        mode: 'cors', // no-cors, *cors, same-origin
        cache: 'no-cache', // *default, no-cache, reload, force-cache, only-if-cached
        credentials: 'same-origin', // include, *same-origin, omit
        headers: {
        'Content-Type': "text/html; charset=UTF-8"
        // 'Content-Type': 'application/x-www-form-urlencoded',
        },
        redirect: 'follow', // manual, *follow, error
        referrerPolicy: 'no-referrer',
        body: null
      }).then(function(response){
	  console.log(response);
	  window.location.href = response.url;
      })

    };
  </script>
  <body>
    
    {{template "navbar"}}
    
    <div class="container">

      <div id="page-title" class="text-center mt-4">
	<h1>
          View Autos
	</h1>
      </div>
      
      <div class="row">

	<div class="card-columns mx-auto">
	  {{range .}}
	  <div class="card" style="width: 20rem;">
	    <div class="card-header">
	      {{.VIN}}
	    </div>
	    <div class="card-body">
	      <div class="mb-3">
	      {{.Year}} - {{.Make}} {{.Model}}
	      </div>
	      <a class="card-link" href="/generate-pdf?vehicleId={{.VehicleId}}&customerId={{.CustomerId}}">Paperwork</a>
        <button onclick="deleteData({{.VehicleId}},{{.CustomerId}})",type="button" class="btn btn-danger">Delete</button>
	    </div>
	  </div>
	  {{end}}
	  

	</div>
	
  </div>
  </body>
</html>
